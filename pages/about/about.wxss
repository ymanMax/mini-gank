/* 基础样式 */
.container {
  min-height: 100vh;
  padding: 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.light-theme {
  background-color: #f5f5f5;
  color: #333;
}

.dark-theme {
  background-color: #1a1a1a;
  color: #fff;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
  color: white;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-bio {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.user-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.edit-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  backdrop-filter: blur(10rpx);
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: white;
  border-radius: 15rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.dark-theme .tab-bar {
  background: #2d2d2d;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: bold;
}

/* 内容区域 */
.content {
  min-height: 400rpx;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.dark-theme .info-card {
  background: #2d2d2d;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.dark-theme .info-item {
  border-bottom-color: #444;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.dark-theme .info-label {
  color: #aaa;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.dark-theme .info-value {
  color: #fff;
}

/* 发布列表 */
.posts-list,
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.post-item,
.history-item {
  display: flex;
  background: white;
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.post-item:active,
.history-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.dark-theme .post-item,
.dark-theme .history-item {
  background: #2d2d2d;
}

.post-image,
.history-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.post-info,
.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.post-title,
.history-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.dark-theme .post-title,
.dark-theme .history-title {
  color: #fff;
}

.post-meta,
.history-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  align-items: center;
}

.post-type,
.history-type {
  background: #f0f0f0;
  color: #666;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.dark-theme .post-type,
.dark-theme .history-type {
  background: #444;
  color: #aaa;
}

.post-date,
.history-date,
.history-duration {
  font-size: 24rpx;
  color: #999;
}

.dark-theme .post-date,
.dark-theme .history-date,
.dark-theme .history-duration {
  color: #666;
}

.post-stats {
  font-size: 24rpx;
  color: #666;
}

.dark-theme .post-stats {
  color: #aaa;
}

/* 设置列表 */
.settings-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.dark-theme .setting-item {
  background: #2d2d2d;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
}

.dark-theme .setting-label {
  color: #fff;
}

.setting-value {
  display: flex;
  align-items: center;
  gap: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.dark-theme .setting-value {
  color: #aaa;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .user-card {
    flex-direction: column;
    text-align: center;
    padding: 30rpx;
  }

  .avatar {
    margin-right: 0;
    margin-bottom: 20rpx;
  }

  .user-stats {
    justify-content: center;
  }

  .tab-item {
    font-size: 26rpx;
    padding: 15rpx;
  }

  .post-item,
  .history-item {
    flex-direction: column;
  }

  .post-image,
  .history-image {
    width: 100%;
    height: 200rpx;
    margin-right: 0;
    margin-bottom: 15rpx;
  }
}
