.collection-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.search-bar input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  border: 2rpx solid #eee;
  border-radius: 35rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
}

.search-bar .search-icon {
  margin-left: 20rpx;
}

/* 分类筛选样式 */
.category-filter {
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.category-scroll {
  white-space: nowrap;
  padding: 20rpx;
}

.category-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.category-item.active {
  background-color: #ff4444;
  color: #fff;
}

/* 收藏列表样式 */
.collection-list {
  padding: 20rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-text {
  margin-top: 30rpx;
  font-size: 28rpx;
}

.collection-item {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.item-img {
  width: 200rpx;
  height: 150rpx;
  flex-shrink: 0;
}

.item-image {
  width: 100%;
  height: 100%;
}

.item-content {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.item-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 20rpx;
}

.remove-btn, .view-btn {
  padding: 15rpx;
  margin: 10rpx 0;
}

.remove-btn:active, .view-btn:active {
  opacity: 0.6;
}
