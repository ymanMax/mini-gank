/*顶部*/

.gank-header {
    position: fixed;
    width: 100%;
    height: 2rem;
    border-bottom:1px solid #ccc;
    display: flex;
    flex-direction: row;
    line-height: 2rem;
    z-index: 999;
}
.heightem{
    height: 2rem;
    width: 100%;
}
.gank-menu {
    width: 2rem;
    height: 100%;
}
.menu-icon {
    width: 2rem;
    height: 2rem;
    margin-left: 0.5rem;
}
.gank-seach {
     width: 60%;
     line-height: 1rem;
     padding-left: 2rem;
}
.gank-seach input {
    text-align: center;
    margin-top: 0.35rem;
    border-radius: 0.2rem;
    background-color: #fff;
}
.seach-icon {
    padding: 0.6rem 0.5rem 0 0.5rem;
}



/*//弹出菜单*/
.popup-menu {
    position: fixed;
    top:2rem;
    left:0;
    width: 15rem;
    height: 25rem;
    box-shadow: 1px 1px 1px 1px silver;
    background-color: #fff;
    z-index: 99999
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.menu-option view {
    height: 2rem;
    line-height: 2rem;
    border-bottom: 2px solid #e9faff;
    margin: 0  2rem;
    text-align: center;
    color: #aaa;
}


/*有图片的样式*/
.haveImg{
    height: 15rem;
    width: 95%;
    margin: 0.45rem auto;
    background-color: #fff;
    box-shadow: 1px 1px 1px 1px lemonchiffon;
    position: relative;
    z-index: auto;
}
.haveImage {
    width: 100%;
    height: 15rem;
}
.haveDesc {
    position: absolute;
    right: 1rem;
    bottom: 1rem;
    color: #fff;
}
.havePublishedAt {
    position: absolute;
    right: 1rem;
    bottom: 0rem;
    color: #fff;
}


/*//保存图片*/
.modalImg {
    width: 100%;
    height: 20rem;
}



/*//其他样式*/
.gank-html{
    height: 5rem;
    width: 95%;
    margin: 0.45rem auto;
    background-color: #ccc;
    border-radius: 4px;
    border: 1px solid #e9faff;
    box-shadow: 2px 3px 3px 3px lemonchiffon;
    position: relative;
    z-index: auto;
    color: aqua;
}

/* 内容操作按钮样式 */
.content-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 8px 16px;
  margin-top: 8px;
  background-color: #f8f9fa;
  border-radius: 4px;
}

.action-btn {
  display: flex;
  align-items: center;
  margin-left: 20px;
  font-size: 14px;
  color: #666;
  cursor: pointer;
  transition: color 0.3s;
}

.action-btn:active {
  color: #333;
}

.action-btn icon {
  margin-right: 4px;
}

/* 评论区域样式 */
.comments-section {
  padding: 16px;
  background-color: #f8f9fa;
  border-top: 1px solid #e9ecef;
  border-bottom: 1px solid #e9ecef;
}

.comments-list {
  margin-top: 8px;
}

.comment-item {
  display: flex;
  margin-bottom: 16px;
  padding-bottom: 16px;
  border-bottom: 1px solid #e9ecef;
}

.comment-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.comment-item.reply {
  margin-left: 40px;
}

.comment-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  margin-right: 12px;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
  min-width: 0;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
}

.comment-author {
  font-size: 14px;
  font-weight: 500;
  color: #495057;
}

.comment-time {
  font-size: 12px;
  color: #adb5bd;
}

.comment-text {
  font-size: 14px;
  line-height: 1.6;
  color: #495057;
  margin-bottom: 8px;
  word-break: break-all;
}

.comment-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 8px;
}

.comment-image {
  width: 80px;
  height: 80px;
  margin-right: 8px;
  margin-bottom: 8px;
  border-radius: 4px;
  object-fit: cover;
}

.comment-actions {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.comment-action-btn {
  display: flex;
  align-items: center;
  margin-right: 16px;
  font-size: 12px;
  color: #999;
  cursor: pointer;
  transition: color 0.3s;
}

.comment-action-btn:active {
  color: #666;
}

.comment-action-btn icon {
  margin-right: 4px;
}

/* 评论输入区域样式 */
.comment-input-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1px solid #e9ecef;
  z-index: 100;
}

.comment-input-toolbar {
  padding: 8px 16px;
}

.comment-input-container {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 20px;
  padding: 8px 12px;
  margin-bottom: 8px;
}

.comment-input {
  flex: 1;
  min-width: 0;
  font-size: 14px;
  color: #495057;
  background-color: transparent;
  border: none;
  outline: none;
  line-height: 1.4;
  max-height: 80px;
  overflow-y: auto;
}

.comment-input-actions {
  display: flex;
  align-items: center;
  margin-left: 8px;
}

.comment-action-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  margin-right: 4px;
  border-radius: 50%;
  background-color: transparent;
  cursor: pointer;
  transition: background-color 0.3s;
}

.comment-action-icon:active {
  background-color: #e9ecef;
}

.comment-submit-btn {
  padding: 6px 16px;
  background-color: #4ecdc4;
  color: #fff;
  border-radius: 16px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.comment-submit-btn:active {
  background-color: #3dbdb5;
}

/* 评论图片预览样式 */
.comment-images-preview {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 8px;
}

.comment-image-preview {
  position: relative;
  width: 60px;
  height: 60px;
  margin-right: 8px;
  margin-bottom: 8px;
  border-radius: 4px;
  overflow: hidden;
}

.comment-image-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.comment-image-remove {
  position: absolute;
  top: -4px;
  right: -4px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #ff6b6b;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

/* 表情选择器样式 */
.emoji-picker {
  background-color: #fff;
  border-top: 1px solid #e9ecef;
  padding: 8px;
  max-height: 200px;
  overflow-y: auto;
}

.emoji-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.emoji-item {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
  cursor: pointer;
  border-radius: 4px;
  transition: background-color 0.3s;
}

.emoji-item:active {
  background-color: #f8f9fa;
}

.emoji-item image {
  width: 32px;
  height: 32px;
  object-fit: cover;
}

.emoji-close {
  text-align: center;
  padding: 8px;
  color: #666;
  font-size: 14px;
  cursor: pointer;
  border-top: 1px solid #e9ecef;
  margin-top: 8px;
}

.emoji-close:active {
  color: #333;
}
